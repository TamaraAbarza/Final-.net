@model Tipo
@{
    ViewData["Title"] = "Modificar Tipo de Inmueble";
}
<link rel="stylesheet" href="@Url.Content("~/css/styleForm.css")" />
<div class="card-container">
    <h1>@ViewData["Title"]</h1>
    <form asp-controller="Tipo" asp-action="Actualizar" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="TipoInmueble" class="control-label">Tipo de Inmueble</label>
            <input asp-for="TipoInmueble" class="form-control" />
            <span asp-validation-for="TipoInmueble" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end mt-4 gap-2">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-controller="Tipo" asp-action="Index" class="btn btn-danger">Cancelar</a>
        </div>
    </form>
</div>
