@{
    ViewData["Title"] = "Inicio";
}

@if (TempData["Mensaje"] != null)
{
    string tipoMensaje = TempData["TipoMensaje"] as string;
    string claseAlerta = tipoMensaje == "error" ? "alert-danger" : "alert-success";
    <div class="alert @claseAlerta alert-dismissible fade show mt-2" role="alert">
        @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container text-center mt-5">
    <h1 class="display-5 fw-bold mb-4">Sistema de Gestión de Alquileres</h1>
    <p class="lead mb-5">Bienvenido/a. Administre propietarios, inquilinos, contratos, pagos y más desde este panel centralizado.</p>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <a asp-controller="Propietario" asp-action="Index" class="card-link">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-person-badge fs-1 text-primary"></i>
                        <h5 class="card-title mt-3">Propietarios</h5>
                        <p class="card-text">Administre la información de los propietarios registrados.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-controller="Inmueble" asp-action="Index" class="card-link">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-building fs-1 text-success"></i>
                        <h5 class="card-title mt-3">Inmuebles</h5>
                        <p class="card-text">Gestione el listado de propiedades disponibles y ocupadas.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-controller="Inquilino" asp-action="Index" class="card-link">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-people fs-1 text-danger"></i>
                        <h5 class="card-title mt-3">Inquilinos</h5>
                        <p class="card-text">Registre y modifique información de los inquilinos activos.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        <div class="col">
            <a asp-controller="Contrato" asp-action="Index" class="card-link">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-file-earmark-text fs-1 text-info"></i>
                        <h5 class="card-title mt-3">Contratos</h5>
                        <p class="card-text">Cree, renueve o finalice contratos de forma clara y segura.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-controller="Pago" asp-action="Index" class="card-link">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-cash-coin fs-1 text-warning"></i>
                        <h5 class="card-title mt-3">Pagos</h5>
                        <p class="card-text">Registre pagos, calcule multas y administre cuotas.</p>
                    </div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-controller="Usuario" asp-action="Index" class="card-link">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-lock fs-1 text-dark"></i>
                        <h5 class="card-title mt-3">Usuarios</h5>
                        <p class="card-text">Gestione usuarios del sistema y controle sus permisos.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        .card-link {
            text-decoration: none; 
            color: inherit;
        }
        .card-link:hover .card {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease; 
        }
        .card {
            transition: all 0.3s ease; 
        }
    </style>
}