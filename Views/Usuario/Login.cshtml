@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión - Sistema Inmobiliario</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            background: linear-gradient(to right, #004080, #0066cc);
            font-family: 'Segoe UI', sans-serif;
            color: #333;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-login {
            background-color: #fff;
            border-radius: 16px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
            padding: 40px 30px;
            max-width: 420px;
            width: 100%;
            animation: fadeIn 0.5s ease-in-out;
        }

        .card-login h3 {
            text-align: center;
            color: #004080;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .card-login p {
            text-align: center;
            color: #6c757d;
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 5px;
            color: #333;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            font-size: 1rem;
        }

        .form-control:focus {
            border-color: #004080;
            box-shadow: 0 0 6px rgba(0, 64, 128, 0.4);
        }

        .btn-primary {
            background-color: #004080;
            border-color: #004080;
            font-weight: bold;
            padding: 12px;
            border-radius: 8px;
        }

        .btn-primary:hover {
            background-color: #003060;
            border-color: #003060;
        }

        .footer-text {
            font-size: 0.9rem;
            text-align: center;
            color: #6c757d;
            margin-top: 20px;
        }

        .alert {
            font-size: 0.95rem;
            margin-bottom: 15px;
        }

        .bi {
            margin-right: 6px;
        }
    </style>
</head>
<body>

    <div class="card-login">
        <h3><i class="bi-house-door"></i> Inmobiliaria ULP</h3>
        <p>Accedé al sistema de gestión de alquileres inmobiliarios.</p>

        @if (TempData["Mensaje"] != null)
        {
            string tipoMensaje = TempData["TipoMensaje"] as string;
            string claseAlerta = tipoMensaje == "error" ? "alert-danger" : "alert-success";
            <div class="alert @claseAlerta alert-dismissible fade show" role="alert">
                @TempData["Mensaje"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }

        <form asp-controller="Usuario" asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label for="email" class="form-label">Correo electrónico</label>
                <input type="email" class="form-control" asp-for="Email" id="email" placeholder="usuario@correo.com" required />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" class="form-control" asp-for="Password" id="password" placeholder="********" required />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-box-arrow-in-right"></i> Iniciar sesión</button>
        </form>

        <div class="footer-text">
            <p>Solo para personal autorizado</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


